extends layout

block content
  h1 Hero DB Test
  p A basic node.js REST API using Express.

  // Wrapper
  #wrapper
    // USER INFO
    #userInfo
      h2 User Info
      p
        strong Name:
        |  <span id='userInfoName'></span>
        br
        strong Age:
        |  <span id='userInfoAge'></span>
        br
        strong Gender:
        |  <span id='userInfoGender'></span>
        br
        strong Location:
        |  <span id='userInfoLocation'></span>

        //button#btnEditUser Edit User
    // /USER INFO
    // USER LIST
    h2 User List
    #userList
      table
        thead
          th UserName
          th Species
          th Delete?
          th Edit?
        tbody
    // /USER LIST
    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserSpecies(type='text', placeholder='Species')
        br
        input#inputUserFullname(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        //input#inputUserGender(type='text', placeholder='Gender')
        select#selectUserGender
            option(value="SelectGender" selected"") Gender
            option(value="Female") Female
            option(value="Male") Male
            option(value="Prefer Not To Specify") Prefer Not To Specify        
        br
        button#btnAddUser Add User
        button#btnAddUserResetFields Reset
    br
    h2 Edit User
    #editUser
      fieldset
        input#inputUserID(type='text', placeholder='ID', readOnly=true)
      
        //strong ID:
        //|  <span id='inputUserID'></span>
        br
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserSpecies(type='text', placeholder='Species')
        br
        input#inputUserFullname(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        //input#inputUserGender(type='text', placeholder='Gender')
        select#selectUserGender
            option(value="SelectGender" selected"") Gender
            option(value="Female") Female
            option(value="Male") Male
            option(value="Prefer Not To Specify") Prefer Not To Specify
        br
        button#btnEditUser Confirm Changes
        button#btnEditUserResetFields Reset
    // /ADD USER
  // /WRAPPER
